<h1>Listing filters</h1>

<table>
  <tr>
    <th>Layer</th>
    <th>Field name</th>
    <th>Operation</th>
    <th>Value</th>
  </tr>

<% for filter in @filters %>
  <tr>
    <td><%=h filter.layer_id %></td>
    <td><%=h filter.field_name %></td>
    <td><%=h filter.operation %></td>
    <td><%=h filter.value %></td>
    <td><%= link_to 'Show', filter %></td>
    <td><%= link_to 'Edit', edit_filter_path(filter) %></td>
    <td><%= link_to 'Destroy', filter, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

