<h1>Listing layer_settings</h1>

<table>
  <tr>
    <th>Buffer size</th>
    <th>Buffer fill color</th>
    <th>Buffer stroke color</th>
    <th>Fill color</th>
    <th>Stroke color</th>
    <th>Stroke weight</th>
    <th>Opacity</th>
    <th>Layer</th>
  </tr>

<% for layer_setting in @layer_settings %>
  <tr>
    <td><%=h layer_setting.buffer_size %></td>
    <td><%=h layer_setting.buffer_fill_color %></td>
    <td><%=h layer_setting.buffer_stroke_color %></td>
    <td><%=h layer_setting.fill_color %></td>
    <td><%=h layer_setting.stroke_color %></td>
    <td><%=h layer_setting.stroke_weight %></td>
    <td><%=h layer_setting.opacity %></td>
    <td><%=h layer_setting.layer_id %></td>
    <td><%= link_to 'Show', layer_setting %></td>
    <td><%= link_to 'Edit', edit_layer_setting_path(layer_setting) %></td>
    <td><%= link_to 'Destroy', layer_setting, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New layer_setting', new_layer_setting_path %>
